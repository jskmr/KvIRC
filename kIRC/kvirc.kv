<ChatScreen>
	name: 'Chat'	
	TabbedPanel:
		do_default_tab: False
		id: UItabs
		TabbedPanelItem:
			text: 'Home'
			GridLayout:
				cols:2
				GridLayout:
					cols:1
					size_hint:(.3,1)
					row_force_default: True
					row_default_height: 50
					Label:
						text: 'config'
					Label:
						text: 'Server address.'
					TextInput:
						id: serverInp
					Label:
						text: 'Server\'s port. Default is 6667.'
					TextInput:
						id: portInp
					Label:
						text: 'Your nickname.'
					TextInput:
						id: nickInp
					Label:
						text: 'Target username or #channel.'
					TextInput:
						id: targetInp
					Button:
						text: 'CONNECT'
						on_press: app.startChat()
<chatTab>
	chatView: chatView
	BoxLayout:
		orientation: 'horizontal'
		GridLayout:
			cols:1
			size_hint_x: .7
			ScrollView:
				size_hint_y: .7
				GridLayout:
					cols: 1
					id: chatView
					size_hint_y: None
			BoxLayout:
				orientation: 'vertical'
				size_hint_y: .3
				TextInput:
					id: msgInp
				Button:
					text: 'Send'
					on_press: app.triggerMsg()
		ScrollView:
			size_hint_x: .3
			GridLayout:
				cols: 1
				id: memberView
				size_hint_y: None
				Label:
					text: 'members'
<chatMsg@GridLayout>
	rows: 3
	cols: 1
	Label:
		id: senderLbl
		text: 'AUTHOR'
	Label:
		id: timeLbl
		text: 'TIMESTAMP'
	Label:
		id: msgLbl
		text: 'MESSAGE'
			
