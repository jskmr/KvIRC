<ChatScreen>:
	name: 'Chat'
	
	chatView: chatView
	
	TabbedPanel:
		do_default_tab: False
		id: UItabs
		TabbedPanelItem:
			text: 'Home'
			GridLayout:
				cols:2
				GridLayout:
					cols:1
					size_hint:(.3,1)
					row_force_default: True
					row_default_height: 50
					Label:
						text: 'config'
					Label:
						text: 'Server address.'
					TextInput:
						id: serverInp
					Label:
						text: 'Server\'s port. Default is 6667.'
					TextInput:
						id: portInp
					Label:
						text: 'Your nickname.'
					TextInput:
						id: nickInp
					Label:
						text: 'Target username or #channel.'
					TextInput:
						id: targetInp
					Button:
						text: 'CONNECT'
						on_press: app.startChat()
						
				GridLayout:
					cols:1
					size_hint:(.7,1)
					ScrollView:
						size_hint:(1,.7)
						GridLayout:
							cols: 1
							id: chatView
							size_hint_y: None
							Label:
								text: 'test'
					BoxLayout:
						orientation: 'vertical'
						size_hint:(1,.3)
						TextInput:
							id: msgInp
						Button:
							text: 'Send'
							on_press: app.triggerMsg()
					
			
